---
import Layout from '../../layouts/Layout.astro';
import { loadHnData } from '../../lib/data';
import type { HnStoredItem } from '../../lib/data';

export function getStaticPaths() {
  const hnData = loadHnData();
  const items = hnData?.items || [];
  return items.map(item => ({
    params: { id: String(item.id) },
    props: { item },
  }));
}

interface Props { item: HnStoredItem; }

const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
const { item } = Astro.props;

// Detail has full AI data; fall back to list-level summary
const detailAi = item.detail?.aiSummary || item.detail?.aisummary;
const ai = detailAi || item.aiSummary || item.aisummary || {};
const emoji = ai.emoji || '';
const cnTitle = ai.chinese_title || '';
const context = ai.context || '';
const discussions = ai.discussion_overview || [];
const terms = ai.terminologies || [];
const hnUrl = `https://news.ycombinator.com/item?id=${item.id}`;

function timeAgo(ts: number): string {
  const diff = Date.now() - ts * 1000;
  const h = Math.floor(diff / 3_600_000);
  const d = Math.floor(diff / 86_400_000);
  if (h < 24) return `${h}h`;
  return `${d}d`;
}
---
<Layout title={`${cnTitle || item.title} - TechDigest`}>
  <a href={`${base}hn/`} class="inline-flex items-center gap-1 text-accent-warm text-sm mb-3 hover:underline">
    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
    返回列表
  </a>

  <!-- Title -->
  <div class="bg-bg-card rounded-xl border border-gray-200/60 px-3 py-3 mb-3">
    <h1 class="text-[17px] font-bold leading-snug text-text-primary">{cnTitle || item.title}</h1>
    {cnTitle && <p class="text-[12px] text-text-tertiary mt-1 break-words leading-relaxed">{item.title}</p>}
    <div class="flex items-center justify-between mt-3">
      <div class="flex items-center gap-x-1.5 text-[11px] text-text-secondary leading-none">
        <span class="font-medium text-accent-warm">{item.score} 分</span>
        <span class="opacity-30">·</span>
        <span>{item.by}</span>
        <span class="opacity-30">·</span>
        <span>{timeAgo(item.createdAt)}</span>
      </div>
      <div class="flex gap-1.5">
        {item.url && (
          <a href={item.url} target="_blank" rel="noopener" class="detail-link">
            原文 <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
        )}
        <a href={hnUrl} target="_blank" rel="noopener" class="detail-link">
          HN <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Context -->
  {context && (
    <div class="bg-bg-card rounded-xl border border-gray-200/60 px-3 py-3 mb-3">
      <h2 class="text-sm font-semibold text-text-primary mb-2">讨论背景</h2>
      <p class="text-[13px] leading-relaxed text-text-secondary">{context}</p>
    </div>
  )}

  <!-- Discussion overview -->
  {discussions.length > 0 && (
    <div class="mb-3">
      <div class="flex items-center gap-2 mb-2.5">
        <h2 class="text-sm font-semibold text-text-primary">讨论焦点</h2>
        <span class="text-[10px] text-accent-muted bg-gray-100 px-1.5 py-0.5 rounded-full font-medium">{discussions.length} 个观点</span>
      </div>
      <div class="space-y-2.5">
        {discussions.map((d, i) => (
          <div class="discussion-card" style={`--card-i:${i}`}>
            <div class="flex items-center gap-1.5 mb-1">
              <span class="disc-index">{i + 1}</span>
              <div class="text-[13px] font-semibold text-text-primary leading-snug">{d.category}</div>
            </div>
            <p class="text-[13px] leading-relaxed text-text-secondary">{d.summary}</p>
            {d.supportid && d.supportid.length > 0 && (
              <span class="text-[11px] text-text-tertiary mt-1 inline-block">
                相关评论{' '}
                {d.supportid.map((sid, j) => (
                  <>{j > 0 && ' '}<a href={`https://news.ycombinator.com/item?id=${sid}`} target="_blank" rel="noopener" class="text-text-tertiary hover:text-accent-warm">{j + 1}</a></>
                ))}
              </span>
            )}
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Terminologies -->
  {terms.length > 0 && (
    <div class="bg-bg-card rounded-xl border border-gray-200/60 px-3 py-3">
      <h2 class="text-sm font-semibold text-text-primary mb-2">术语解释</h2>
      <dl class="space-y-1.5">
        {terms.map(t => (
          <div>
            <dt class="text-[13px] font-medium text-text-primary">{t.term}</dt>
            <dd class="text-[12px] text-text-secondary leading-relaxed">{t.explanation}</dd>
          </div>
        ))}
      </dl>
    </div>
  )}
</Layout>
