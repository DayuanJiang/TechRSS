---
interface Props {
  date: string;
  prevDate?: string;
  nextDate?: string;
}
const { date, prevDate, nextDate } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');

// Format center date as "2月24日"
const [, m, d] = date.split('-');
const centerDate = `${parseInt(m)}月${parseInt(d)}日`;

// Format compact nav dates as "2/23"
function compactDate(ds: string) {
  const [, mm, dd] = ds.split('-');
  return `${parseInt(mm)}/${parseInt(dd)}`;
}
---
<nav class="flex justify-between items-center py-3">
  {prevDate ? (
    <a class="text-accent-warm font-medium min-h-[44px] inline-flex items-center gap-1 active:opacity-70 transition-opacity" href={`${base}day/${prevDate}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
      {compactDate(prevDate)}
    </a>
  ) : (
    <span class="min-w-[44px]"></span>
  )}
  <span class="text-text-primary font-bold text-lg">{centerDate}</span>
  {nextDate ? (
    <a class="text-accent-warm font-medium min-h-[44px] inline-flex items-center gap-1 active:opacity-70 transition-opacity" href={`${base}day/${nextDate}`}>
      {compactDate(nextDate)}
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
    </a>
  ) : (
    <span class="min-w-[44px]"></span>
  )}
</nav>
