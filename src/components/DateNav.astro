---
interface Props {
  date: string;
  prevDate?: string;
  nextDate?: string;
}
const { date, prevDate, nextDate } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
---
<nav class="flex justify-between items-center py-3 text-sm border-t border-gray-200 mt-3 sm:mt-4">
  {prevDate ? (
    <a class="text-hn-orange font-medium hover:underline min-h-[44px] inline-flex items-center" href={`${base}day/${prevDate}`}>&larr; {prevDate}</a>
  ) : (
    <span></span>
  )}
  <span class="text-gray-500 font-medium">{date}</span>
  {nextDate ? (
    <a class="text-hn-orange font-medium hover:underline min-h-[44px] inline-flex items-center" href={`${base}day/${nextDate}`}>{nextDate} &rarr;</a>
  ) : (
    <span></span>
  )}
</nav>
